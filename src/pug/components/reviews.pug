		.reviews__slider
			.swiper-wrapper
				each object, key in data.reviews.users
					.reviews__card.swiper-slide(data-link=key)
						.reviews__rating(class=object.user_rating)
							+svg("rating-star")
							+svg("rating-star")
							+svg("rating-star")
							+svg("rating-star")
							+svg("rating-star")
						p.reviews__card-text!=object.user_text
						.reviews__user
							.reviews__user-photo
								img(src=object.user_photo_src alt=object.img_alt)
							span.reviews__user-name!=object.user_name
							span.reviews__user-country!=object.user_country

		.reviews__slider-navigation
			button.slider-nav-btn.slide-btn-prev.reviews__slide-btn-prev
				+svg("arrow-right")
			button.slider-nav-btn.slide-btn-next.reviews__slide-btn-next
				+svg("arrow-right")
